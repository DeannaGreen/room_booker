<%= form_with(model: roombooking, local: true) do |form| %>
  <% if roombooking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(roombooking.errors.count, "error") %> prohibited this roombooking from being saved:</h2>

      <ul>
      <% roombooking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <div class="col-auto">
        <label for="chooseRoom">Room</label>
        <select class="form-control" id="chooseRoom">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
        </select>
      </div>
    </div>

    <div class ="form-group">
      <div class="field">
        <%= form.label :room_id %>
        <% options = options_from_collection_for_select(@rooms, 'id', 'roomname') %>
        <%= form.select :room_id,  options %>
      </div>
    </div>

    <div class ="form-group">
      <div class="field">
        <%= form.label :starttime %>
        <%= form.datetime_select :starttime %>
      </div>
    </div>
    <div class ="form-group">
      <div class="field">
        <%= form.label :endtime %>
        <%= form.datetime_select :endtime %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-auto">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" placeholder="Enter Description">
      </div>
    </div>
    <div class='col-auto'>
      <button type="submit" class="btn btn-primary">Create Room</button>
    </div>
  </form>
<% end %>
