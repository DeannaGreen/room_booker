<h1>New Company</h1>

<%= form_with(model: @company, local: true) do |form| %>
	<div class="form-group">
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <%= form.label :companyname %>
    <%= form.text_field :companyname , autofocus: true ,class: 'form-control'  %>
  </div>

<div class="form-group">
    <%= form.label :subdomain %>
    <%= form.text_field :subdomain ,class: 'form-control' %>
  </div>

  <%= fields_for :user do |ff| %>
	  	
<div class="form-group">
	    <%= ff.label :email %>
	    <%= ff.email_field :email, autocomplete: "email" ,class: 'form-control' %>
	  </div>

<div class="form-group">
	    <%= ff.label :password %>
	    <% if @minimum_password_length %>
	    <em>(<%= @minimum_password_length %> characters minimum)</em>
	    <% end %>
	    <%= ff.password_field :password, autocomplete: "off" ,class: 'form-control' %>
	  </div>

<div class="form-group">
	    <%= ff.label :password_confirmation %>
	    <%= ff.password_field :password_confirmation, autocomplete: "off" ,class: 'form-control' %>
	  </div>

  <% end %>

  <div class='col-auto'>
    <button type="submit" class="btn btn-dark">Create Company</button>
  </div>
<% end %>


<%= link_to 'Back', companies_path %>
